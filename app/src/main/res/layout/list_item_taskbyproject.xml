<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- project id (pid) - will be HIDDEN - used to pass to other activity -->
    <TextView
        android:id="@+id/pid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />


    <!-- Name Label -->

    <!--TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:paddingTop="6dip"
        android:paddingLeft="6dip"
        android:textSize="24dip"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/pid"
        android:layout_toEndOf="@+id/pid"/-->

    <TextView
        android:id="@+id/deskripsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dip"
        android:paddingLeft="6dip"
        android:textSize="24dip"
        android:elegantTextHeight="false"
        android:text="project"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/name"
        android:layout_toEndOf="@+id/name" />

    <TextView
        android:id="@+id/keterangan"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:paddingTop="6dip"
        android:paddingLeft="6dip"
        android:textSize="17dip"
        android:text="keterangan"
        android:layout_below="@+id/deskripsi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/namaWorker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dip"
        android:paddingLeft="6dip"
        android:textSize="17dip"
        android:text=""
        android:layout_below="@+id/keterangan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/tglselesai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tgl selesai"
        android:layout_alignBottom="@+id/keterangan"
        android:layout_toRightOf="@+id/deskripsi"
        android:layout_toEndOf="@+id/deskripsi"
        android:visibility="gone"/>

</RelativeLayout>