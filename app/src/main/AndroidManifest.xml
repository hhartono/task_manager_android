<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.inerre.taskmanager" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DashboardActivity"
            android:label="Dashboard for admin">
        </activity>
        <activity android:name=".LoadProjectActivity"
            android:label="Load Project">
        </activity>
        <activity android:name=".LoadTaskActivity"
            android:label="Load Task">
        </activity>
        <activity android:name=".LoadWorkerActivity"
            android:label="Load Worker">
        </activity>
        <activity android:name=".LoadTaskbyWorkerActivity"
            android:label="Load Task By Worker">
        </activity>
        <activity android:name=".LoadTaskbyCreationDateActivity"
            android:label="Load Task By Creation Date">
        </activity>
        <activity android:name=".LoadTaskbyTglSelesaiActivity"
            android:label="Load Task By Tanggal Selesai Hari ini">
        </activity>
        <activity android:name=".AddProjectActivity"
            android:label="Add Project">
        </activity>
        <activity android:name=".AddWorkerActivity"
            android:label="Add Worker">
        </activity>
        <activity android:name=".AddTaskActivity"
            android:label="Add Task">
        </activity>

    </application>

    <!--  Internet Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
